<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cancelledCardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cancelledImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/appicon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cancelledTitle"
                android:layout_width="270dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="#3A3A3A"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/cancelledImg"
                app:layout_constraintTop_toTopOf="@+id/cancelledImg" />

            <TextView
                android:id="@+id/cancelledQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cancelledPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="6dp"
                android:text="TextView"
                android:textColor="#FF5722"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cancelledQuan" />

            <TextView
                android:id="@+id/cancelledTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="6dp"
                android:text="TextView"
                android:textColor="#FF2B2B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cancelledPrice" />

            <TextView
                android:id="@+id/wlalang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Order Total:"
                app:layout_constraintBottom_toBottomOf="@+id/cancelledTotal"
                app:layout_constraintEnd_toStartOf="@+id/cancelledTotal"
                app:layout_constraintTop_toTopOf="@+id/cancelledTotal"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled"
                android:textColor="#F44336"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/textView50"
                app:layout_constraintStart_toStartOf="@+id/textView50"
                app:layout_constraintTop_toBottomOf="@+id/textView50" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:text="Status :"
                app:layout_constraintBottom_toBottomOf="@+id/cancelledImg"
                app:layout_constraintStart_toEndOf="@+id/cancelledImg"
                app:layout_constraintTop_toTopOf="@+id/cancelledImg"
                app:layout_constraintVertical_bias="0.95" />

            <TextView
                android:id="@+id/cancelledRecieveDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cancelledImg"
                app:layout_constraintVertical_bias="0.100000024" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Product Price"
                app:layout_constraintBottom_toBottomOf="@+id/cancelledPrice"
                app:layout_constraintEnd_toStartOf="@+id/cancelledPrice"
                app:layout_constraintTop_toTopOf="@+id/cancelledPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>