<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChooseLock">

    <androidx.cardview.widget.CardView
        android:id="@+id/faceRecCardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?selectableItemBackground"
        android:elevation="6dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/fingerprintCardview"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/faceRecHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text="Face Recognition"
            android:textColor="#353535"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/faceRecFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"
            android:text="High security" />

        <ImageView
            android:id="@+id/faceRecImg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/facerec_svg" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/patternCardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?selectableItemBackground"
        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/pinCardview"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/patternHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text="Pattern"
            android:textColor="#353535"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/patternFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"
            android:text="Medium security" />

        <ImageView
            android:id="@+id/patternImg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pattern_svg" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fingerprintCardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?selectableItemBackground"
        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/patternCardview"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/fingerprintHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text="Fingerprint"
            android:textColor="#353535"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fingerprintFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"
            android:text="High security" />

        <ImageView
            android:id="@+id/fingerprintImg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/fingerprint_svg" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Lock Type"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="?selectableItemBackground"
        android:onClick="LockTypeBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pinCardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="?selectableItemBackground"
        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/textView64"
        tools:layout_editor_absoluteX="177dp">

        <TextView
            android:id="@+id/pinHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text="PIN"
            android:textColor="#353535"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pinFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"
            android:text="Low security" />

        <ImageView
            android:id="@+id/pinImg"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pincode_svg" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>